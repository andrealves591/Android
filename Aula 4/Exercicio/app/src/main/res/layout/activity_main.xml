<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <Button
        android:id="@+id/bt_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_red"
        android:background="@color/red500"/>
    <Button
        android:id="@+id/bt_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_orange"
        android:background="@color/orange500"
        android:layout_below="@id/bt_red"
        android:layout_toRightOf="@id/bt_red"/>
    <Button
        android:id="@+id/bt_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_yellow"
        android:background="@color/yellow500"
        android:layout_below="@id/bt_orange"
        android:layout_toRightOf="@id/bt_orange"/>

    <Button
        android:id="@+id/bt_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_green"
        android:background="@color/green500"
        android:layout_below="@id/bt_yellow"
        android:layout_toRightOf="@id/bt_yellow"/>
    <Button
        android:id="@+id/bt_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_blue"
        android:background="@color/blue500"
        android:layout_below="@id/bt_green"
        android:layout_toLeftOf="@id/bt_green"/>
    <Button
        android:id="@+id/bt_indigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_indigo"
        android:background="@color/indigo500"
        android:layout_below="@id/bt_blue"
        android:layout_toLeftOf="@id/bt_blue" />
    <Button
        android:id="@+id/bt_purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_purple"
        android:background="@color/purple500"
        android:layout_below="@id/bt_indigo"
        android:layout_toLeftOf="@id/bt_indigo"/>

</RelativeLayout>