<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RED"
        android:background="@color/red500"/>

    <Button
        android:id="@+id/bt_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ORANGE"
        android:layout_centerHorizontal="true"
        android:background="@color/orange500"/>

    <Button
        android:id="@+id/bt_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YELLOW"
        android:layout_alignParentRight="true"
        android:background="@color/yellow500"/>

    <Button
        android:id="@+id/bt_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GREEN"
        android:layout_marginRight="5dp"
        android:background="@color/green500"
        android:layout_toLeftOf="@id/bt_blue"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/bt_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLUE"
        android:layout_centerInParent="true"
        android:background="@color/blue500"/>

    <Button
        android:id="@+id/bt_indigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INDIGO"
        android:layout_marginLeft="5dp"
        android:background="@color/indigo500"
        android:layout_toRightOf="@id/bt_blue"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/bt_violet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Violet"
        android:background="@color/pink500"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>